{
  "compilerOptions": {
    "module": "ESNext",          
    "target": "ESNext",          
    "moduleResolution": "Node",  
    "esModuleInterop": true,   
    "allowSyntheticDefaultImports": true,
    "strict": true,             
    "outDir": "./dist",        
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
  },
  "include": ["src"]
}
    